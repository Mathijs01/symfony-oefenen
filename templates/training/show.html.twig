{% block title %}Training{% endblock %}

{% block body %}
    <div class="container">
    <h1>Training</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ training.naam }}</td>
            </tr>
            <tr>
